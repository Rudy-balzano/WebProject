<div class="container">


  <div class="border-bottom">

    <% if !current_admin.nil? %>
  <h1 class="border-bottom pb-3 pt-3">Edit client informations</h1>
  <% else %>
    <h1 class="border-bottom pb-3 pt-3">Edit your informations</h1>
  <% end %>
    <br>

  </div>

  <br>

<%= form_for @client do |c| %>
  <div class="form-group">
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>First name</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :prenom, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Last name</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :nom, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Email</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :mail, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="border-bottom">
    <h3>Address</h3>
    <br>
  </div>
  <br>
  <div class="form-group">
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Street </label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :rue, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Number</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :numero, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>City</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :ville, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Post code</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :codePostal, class: 'form-control' %>
      </div>
    </div>


  </div>

    <div class="d-flex">
      <div class="p-2">
        <%= c.submit "Edit", class: 'btn btn-outline-success' %>
      </div>
      <div class="p-2">
        <a href="<%= client_path(session[:user_id]) %>" class="btn btn-outline-secondary">return</a>
      </div>
    </div>

<% end %>

</div>
