<% if !current_admin.nil? %>

<div class="container">
  <div class="border-bottom">
    <h1>Edit your account</h1>
    <br>
  </div>
  <br>
  <%= form_for @admin do |c| %>
  <div class="form-group">
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>First name</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :prenom, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Last name</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :nom, class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="p-2 col-md-1">
        <label>Email</label>
      </div>
      <div class="col-md-5">
        <%= c.text_field :mail, class: 'form-control' %>
      </div>
    </div>
  </div>
  <br>
  <div class="d-flex">
    <div class="p-2">
      <%= c.submit "Edit", class: 'btn btn-outline-success' %>
    </div>
    <div class="p-2">
      <a href="<%= admins_path %>" class="btn btn-outline-secondary">return</a>
    </div>
  </div>
  <% end %>
</div>
<% end %>
